<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Watch</title>
    <script defer src="/js/socket.io.js" charset="utf-8"></script>
    <script defer src="/js/jquery.min.js" charset="utf-8"></script>
    <script defer src="/js/bootstrap.bundle.min.js" charset="utf-8"></script>
    <script defer src="/js/bootstrap-toggle.min.js" charset="utf-8"></script>
    <script defer src="/js/jquery.cookie.js" charset="utf-8"></script>
    <script defer src="/js/bootbox.min.js" charset="utf-8"></script>
    <script defer src="/js/jquery.easyui.min.js" charset="utf-8"></script>
    <script defer src="/js/roomWatch.js" charset="utf-8"></script>
    <script defer src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap-toggle.min.css">
    <link rel="stylesheet" href="/css/roomWatch.css">
  </head>
  <body onload="
    adjustTabsMenuHeight();

    $('#playercontainer').resizable({
      edge: 30,
      handles: 's',
      onStartResize: function(e) {
        $('#player').css('z-index', '-1');
      },
      onResize: function(e) {
        adjustTabsMenuHeight();
      },
      onStopResize: function(e) {
        $('#player').css('z-index', '0');
      }
    });
  ">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
      <div class="container">
        <a class="navbar-brand" href="/">Companion Watch</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" onclick="createRoom()">Create Room</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main>
      <div class="form-label-group videoSearch">
        <input type="text" id="videoQuery" class="form-control" placeholder="Search for YouTube Videos" onkeyup="if(event.key==='Enter')onVideoSearch()" autocomplete="off">
        <button type="button" class="btn btn-lg btn-primary btn-block videoSearchButton" name="videoSearch" onclick="onVideoSearch()">Search</button>
      </div>
      <label class="visibilityToggleWrapper">
        <span>Room visibility:</span>
        <input id="visibilityToggle" type="checkbox" data-toggle="toggle" data-on="Public" data-off="Private" onchange="changeVisibility(this.checked);">
      </label>
      <div id="playercontainer" class="easyui-resizable">
        <div id="player"></div>
      </div>
      <script type="text/javascript">
        var tag = document.createElement('script');

        tag.src = "https://www.youtube.com/iframe_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        var player;
        function onYouTubeIframeAPIReady() {
          player = new YT.Player('player', {
            height: '390',
            width: '640',
            events: {
              'onReady': startVideo
            }
          });
        }
      </script>
      <ul id="tabs" class="nav nav-tabs">
        <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#chat" id="chatTab">Chat</a></li>
        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#resultsDiv" id="resultsDivTab">Video Results</a></li>
        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#queue" id="queueTab">Queue</a></li>
        <li class="nav-item"><a class="nav-link disabled" data-toggle="tab" href="#playlist" id="playlistTab">Playlist Controls</a></li>
      </ul>
      <div class="tab-content">
        <div id="chat" class="tab-pane active">
          <div class="chatChild">
            <div id="messages"></div>
            <div class="chatInput">
              <input type="text" id="messageInput" class="form-control" placeholder="Type your message..." onkeyup="if (event.key==='Enter') sendMessage()" autocomplete="off">
              <button type="button" class="btn btn-lg btn-primary btn-block" name="sendMessage" onclick="sendMessage()"><img src="/imgs/sendMessage.png"></button>
            </div>
          </div>
        </div>
        <div id="resultsDiv" class="tab-pane"></div>
        <div id="queue" class="tab-pane"></div>
        <div id="playlist" class="tab-pane">
          <div class="controls">

          </div>
          <div id="playlistItems"></div>
        </div>
      </div>
    </main>
  </body>
  <template id="videoTemplate">
    <div class="video">
      <img class="thumbnail">
      <h2 class="videoTitle"></h2>
      <p class=channelName""></p>
    </div>
  </template>
  <template id="ownMessageTemplate">
    <div class="messageWrapper own-message">
      <div class="speech-bubble"></div>
      <h4 class="timestamp"></h4><h4 class="dot">&bull;</h4><h4 class="messageName"></h4>
    </div>
  </template>
  <template id="foreignMessageTemplate">
    <div class="messageWrapper foreign-message">
      <div class="speech-bubble"></div>
      <h4 class="messageName"></h4><h4 class="dot">&bull;</h4><h4 class="timestamp"></h4>
    </div>
  </template>
</html>
